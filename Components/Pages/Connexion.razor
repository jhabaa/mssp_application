@page "/connexion"
@rendermode InteractiveServer

<PageTitle>Connexion</PageTitle>

<section id="connexion">
    <form method="post">
        <h1>Connexion</h1>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" placeholder="Entrez votre email" id="email" aria-describedby="emailHelp">
        </div>
        <div class="form-group">
            <label for="motdepasse">Mot de passe</label>
            <input type="password" class="form-control" placeholder="Entrez votre mot de passe" id="motdepasse">
        </div>
        <button type="submit" class="btn">Se connecter</button>
    </form>
</section>

